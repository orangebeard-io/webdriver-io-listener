{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2015",
    "outDir": "./build",
    "inlineSourceMap": false,
    "inlineSources": false,
    "noImplicitReturns": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "declaration": true,
    "esModuleInterop": true
  },
  "include": ["src/"],
  "exclude": [
    "node_modules/", "lib/__tests__/"]
}
